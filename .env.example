# Django Settings - Copy this to .env and fill in values for production

# SECURITY: Set to False in production!
DEBUG=False
DJANGO_DEBUG=False

# SECURITY: Generate a strong random key (at least 50 characters)
# Use: python -c "import django.core.management.utils; print(django.core.management.utils.get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-here-generate-with-django-admin

# Allowed hosts - comma-separated list of your domain(s)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,ree-backend.onrender.com

# CSRF trusted origins - comma-separated list for CSRF protection (HTTPS in production)
DJANGO_CSRF_TRUSTED_ORIGINS=https://deluxe-syrniki-e613e6.netlify.app,http://localhost:5173,http://127.0.0.1:5173

# CORS origins - comma-separated list of allowed frontend origins
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://deluxe-syrniki-e613e6.netlify.app

# Keep this false for JWT header auth from a separate frontend origin
DJANGO_CORS_ALLOW_CREDENTIALS=False

# Database URL (PostgreSQL recommended for production)
DATABASE_URL=sqlite:///db.sqlite3

# OpenRouter API Key for AI features
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Email settings (configure for production email service)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=no-reply@yourdomain.com

# Password reset URL
PASSWORD_RESET_URL=https://yourdomain.com/reset-password

# Security settings (SSL/HSTS)
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
DJANGO_SECURE_HSTS_PRELOAD=True
DJANGO_SECURE_REFERRER_POLICY=same-origin
DJANGO_SECURE_CROSS_ORIGIN_OPENER_POLICY=same-origin
DJANGO_SESSION_COOKIE_SAMESITE=Lax
DJANGO_CSRF_COOKIE_SAMESITE=Lax
